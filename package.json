{
  "name": "asof-website",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "analyze": "ANALYZE=true npm run build",
    "test:afterinstall": "npm run test:e2e",
    "test:e2e": "PLAYWRIGHT_TEST=true playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:chromium": "playwright test --project=chromium",
    "test:e2e:firefox": "playwright test --project=firefox",
    "test:e2e:webkit": "playwright test --project=webkit",
    "test:e2e:mobile": "playwright test --project=mobile-chrome --project=mobile-safari",
    "test:a11y": "playwright test --grep='a11y'",
    "test:performance": "playwright test --grep='web-vitals'",
    "test:api": "playwright test e2e/tests/api/",
    "test:api:auth": "playwright test e2e/tests/api/auth.api.spec.ts",
    "test:api:posts": "playwright test e2e/tests/api/posts.api.spec.ts",
    "test:api:media": "playwright test e2e/tests/api/media.api.spec.ts",
    "test:install": "playwright install --with-deps",
    "test:report": "playwright show-report",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:seed": "dotenv -e .env.local -- prisma db seed",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset",
    "db:push": "prisma db push",
    "db:pull": "prisma db pull",
    "db:check": "dotenv -e .env.local -- ts-node --compiler-options {\\\"module\\\":\\\"CommonJS\\\"} scripts/check-db.ts",
    "postinstall": "prisma generate || true"
  },
  "prisma": {
    "seed": "ts-node --compiler-options {\"module\":\"CommonJS\"} prisma/seed.ts"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@mdx-js/loader": "^3.1.1",
    "@mdx-js/react": "^3.1.1",
    "@next/mdx": "^16.0.3",
    "@prisma/client": "^6.19.0",
    "@radix-ui/react-slot": "^1.2.4",
    "@types/mdx": "^2.0.13",
    "@uiw/react-md-editor": "^4.0.8",
    "@vercel/analytics": "^1.5.0",
    "@vercel/blob": "^2.0.0",
    "@vercel/edge-config": "^1.4.3",
    "@vercel/speed-insights": "^1.2.0",
    "bcryptjs": "^3.0.3",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "framer-motion": "^12.23.24",
    "gray-matter": "^4.0.3",
    "lucide-react": "^0.553.0",
    "next": "^15.1.8",
    "next-auth": "^4.24.13",
    "next-mdx-remote": "^5.0.0",
    "nodemailer": "^7.0.10",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.66.1",
    "reading-time": "^1.5.0",
    "sharp": "^0.34.5",
    "slugify": "^1.6.6",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "web-vitals": "^5.1.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.0",
    "@next/bundle-analyzer": "^16.0.3",
    "@playwright/test": "^1.49.0",
    "@types/bcrypt": "^5.0.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20",
    "@types/nodemailer": "^7.0.4",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.0.1",
    "bcrypt": "^5.1.1",
    "dotenv-cli": "^11.0.0",
    "eslint": "^8",
    "eslint-config-next": "15.1.8",
    "postcss": "^8",
    "prisma": "^6.19.0",
    "tailwindcss": "^3.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5"
  }
}
