# Vercel Deployment Configuration
# Copy this file to .env.local and fill in your values

# Application Environment
NODE_ENV=production
NEXT_PUBLIC_VERCEL_ENV=production

# Vercel Analytics (automatically handled by Vercel)
# No configuration needed - Vercel injects automatically

# Speed Insights (automatically handled by Vercel)
# No configuration needed - Vercel injects automatically

# Environment Information
VERCEL_ENV=production
VERCEL_URL=https://your-domain.vercel.app
NEXT_PUBLIC_VERCEL_URL=https://your-domain.vercel.app

# Performance Monitoring
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_SPEED_INSIGHTS=true

# Content Security Policy
NEXT_PUBLIC_CSP_ENABLED=true

# Feature Flags
NEXT_PUBLIC_ENABLE_DARK_MODE=false
NEXT_PUBLIC_ENABLE_PWA=false

# External Services (if needed in future)
# API_BASE_URL=https://api.asof.org.br

# ============================================================================
# CMS & DATABASE CONFIGURATION
# ============================================================================

# Database - PostgreSQL
# Local Development: postgresql://user:password@localhost:5432/asof_cms
# Vercel Postgres: postgresql://user:pass@host.region.vercel-storage.com:5432/db
# Supabase: postgresql://postgres:pass@db.project.supabase.co:5432/postgres
# Neon: postgresql://user:pass@host.region.neon.tech/db
DATABASE_URL="postgresql://usuario:senha@localhost:5432/asof_cms?schema=public"

# NextAuth.js Authentication
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-secret-key-here-change-in-production"
NEXTAUTH_URL="http://localhost:3000"

# Email Configuration (Password reset, notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
SMTP_FROM="noreply@asof.org.br"

# Media Storage Configuration
# Options: "local", "s3", "r2", "cloudflare"
STORAGE_PROVIDER="local"

# AWS S3 or Cloudflare R2 (if using cloud storage)
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_REGION="us-east-1"
AWS_BUCKET="asof-media"
AWS_ENDPOINT="" # For R2: https://<account_id>.r2.cloudflarestorage.com

# Redis Cache (recommended for production)
REDIS_URL="redis://localhost:6379"

# Admin Configuration
ADMIN_EMAIL="admin@asof.org.br"

# CMS Feature Flags
ENABLE_COMMENTS="true"
ENABLE_NEWSLETTER="true"

# ============================================================================

# Development
# Uncomment for local development
# NEXT_PUBLIC_API_URL=http://localhost:3000
